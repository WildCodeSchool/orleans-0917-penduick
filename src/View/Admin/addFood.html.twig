{% include "Admin/head.html.twig" %}
{% include "Admin/header.html.twig" %}

<h1>Ajouter des plats</h1>

{% if errors %}
    <ul class="alert alert-danger">
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %}

<form action="?route=addFood" method="post">

    <fieldset class="form-group">
        <label for="title">Titre</label>
        <input type="text" class="form-control" name="title" id="title" value="{{ crepe.title }}"/>
        <label for="description">Description</label>
        <input type="text" class="form-control" name="description" id="description" value="{{ crepe.description }}"/>
        <label for="price">Prix</label>
        <input type="number" step="0.1" class="form-control" name="price" id="price" value="{{ crepe.price }}"/>
    </fieldset>

    <fieldset class="form-group">
        <label for="category">Catégorie</label>
        <select name="category" id="category" class="form-control">
            {% for category in categories %}
                <option {{ category == category.id ? 'selected' }}
                        value="{{ category.id }}">{{ category.name }}</option>
            {% endfor %}
        </select>
    </fieldset>

    <button type="submit" class="btn btn-success">
        <span class="glyphicon glyphicon-plus"></span>Ajouter un plat
    </button>
    <a href="?route=menuAdmin"><button type="button" class="btn btn-info">
            <span class="glyphicon glyphicon-home"></span> Revenir à la carte
        </button></a>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</body>
</html>