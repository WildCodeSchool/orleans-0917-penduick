{% include "Admin/head.html.twig" %}
{% include "Admin/header.html.twig" %}

<div class="container">
    <div class="row">

<h1>Ajouter des suppléments</h1>

{% if errors %}
    <ul class="alert alert-danger">
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %}

<form action="?route=addExtra" method="post">

    <fieldset class="form-group">
        <label for="title">Titre</label>
        <input type="text" class="form-control" name="title" id="title" value="{{ extra.title }}"/>
        <label for="price">Prix</label>
        <input type="number" step="0.1" class="form-control" name="price" id="price" value="{{ extra.price }}"/>
    </fieldset>

    <fieldset class="form-group">
        <label for="type">Type</label>
        <select name="type" id="type" class="form-control">
            {% for type in types %}
                <option
                        {{ extra.typeId == type.id ? 'selected' }}

                        value="{{ type.id }}">{{ type.consistency }}</option>
            {% endfor %}
        </select>
    </fieldset>

    <button type="submit" class="btn btn-success">

        <span class="glyphicon glyphicon-plus"></span>Confirmer

    </button>
    <a href="?route=menuAdmin"><button type="button" class="btn btn-info">
            <span class="glyphicon glyphicon-home"></span> Revenir à la carte
        </button></a>
</form>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</body>
</html>