{% include "Admin/head.html.twig" %}
{% include "Admin/header.html.twig" %}

{% for type in types %}
    {{ type.consistency }}
    <form action="?route=deleteType" method="post">
        <input type="hidden" name="id" value="{{ type.id }}"/>
        <button type="submit">Delete</button>
    </form>
{% endfor %}

{% if errors %}
    <ul class="alert alert-danger">
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
{% endif %}

<form action="?route=addType" method="post">

    <fieldset class="form-group">
        <label for="consistency">Type</label>
        <input type="text" class="form-control" name="consistency" id="consistency"/>
    </fieldset>

    <button type="submit" class="btn btn-success">

        <span class="glyphicon glyphicon-plus"></span>Add type
    </button>
</form>

{% include "footer.html.twig" %}
</body>
</html>