{% include "head.html.twig" %}
{% include "header.html.twig" %}

<div class="container">
    <h1 class="menu">LA CARTE </h1>
</div>

<div id="exTab1" class="container">
    <ul class="nav nav-pills">
        <li class="active">
            <a href="#1a" class="ongletCarte" data-toggle="tab">SALÉ</a>
        </li>
        <li><a href="#2a" class="ongletCarte" data-toggle="tab">SUCRÉ</a>
        </li>
    </ul>

    <div class="tab-content clearfix">
        <div class="tab-pane active" id="1a">
            {% for foodSalt in foodsSalt %}
            <div class="media">
                <div class="media-body">
                    <p class="carte">{{ foodSalt.description }}</p>
                </div>
            </div>
            {% endfor %}
            <img src="http://via.placeholder.com/300x300" class="img-responsive crêpe" alt="crêpe">
        </div>

        <div class="tab-pane" id="2a">
            <div class="tab-content clearfix">
                <div class="tab-pane active" id="1a">
                    {% for foodSugar in foodsSugar %}
                        <div class="media">
                            <div class="media-body">
                                <p class="carte">{{ foodSugar.description }}</p>
                            </div>
                        </div>
                    {% endfor %}
                    <img src="http://via.placeholder.com/300x300" id="crêpe" class="img-responsive" alt="crêpe">
                </div>
            </div>
        </div>
    </div>
</div>
