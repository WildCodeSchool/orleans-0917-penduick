{% include "head.html.twig" %}
{% include 'header.html.twig' %}

<section id="menu">
    <!-------------------------------------header-------------------------------------------------------------------->
    <div class="container-fluid menuFond">
        <div class="row text-center">
            <h1 class="titreCarte">
                <img src="pictures/couverts.png" class="logoMenuCard" alt="Couverts">
                <span class="yellow">LA CARTE</span>
            </h1>
        </div>
    </div>
    <div class="styleSpacer"></div>
    <!-------------------------------------fin header--------------------------------------->


    <!-------------------------------------onglets------------------------------------------------->
    <div id="exTab1" class="color container-fluid">
        <div class="row backTab">
            <ul class="nav nav-pills text-center">
                {% for consistency, menu in menus %}
                    <li {{ consistency }} class="{{ loop.first ? 'active' }}">
                        <a class="colorTab" href="#type{{ consistency }}"
                           data-toggle="tab">{{ consistency }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!--------------------------------------fin onglets--------------------------------------------->
    <div class="styleSpacer"></div>
    <!-----------------------------------------pills------------------------------------------------>
    <div class="container-fluid">
        <div class="tab-content clearfix">
            {% for consistency, menu in menus %}
                <div class="tab-pane {{ loop.first ? 'active' }}" id="type{{ consistency }}">
                    <div class="row backgroundCategory">
                        <div class="yellowTitle text-center">
                            {{ consistency }}
                        </div>
                    </div>
                    {% for categories, crepes in menu %}
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-lg-10 col-lg-offset-1 fond">
                                <h2 class="titreCategorie">{{ categories }}</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-lg-9 col-lg-offset-1">
                                <div class="row">
                                    {% for crepe in crepes %}
                                        <div class="col-lg-6">
                                            <ul>
                                                <div class="row">
                                                    <div class="col-xs-8 col-xs-offset-1 col-lg-9"><h4
                                                                class="category"> {{ crepe.title }}</h4>
                                                    </div>
                                                    <div class="col-xs-2 col-xs-offset-1 col-lg-1"><span
                                                                class="price"> {{ crepe.price }}â‚¬</span>
                                                    </div>
                                                </div>
                                                <div class="rowHeight">
                                                    <div class="col-xs-12 col-lg-11 col-lg-offset-1"><span
                                                                class="description">{{ crepe.description }}</span>
                                                    </div>
                                                </div>
                                            </ul>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <!--------------------------------------------fin pills---------------------------------------------------->

        <!-----------------------------------------------pics---------------------------------------------------------->
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-10 col-lg-10 col-lg-offset-1">
                    <div class="columnsPics">
                        {% for picture in pictures %}
                            <ul>
                                <li>
                                    <img src="pictures/upload/{{ picture.name }}{{ picture.extension }}"
                                         class="pictureDetail img-responsive" alt="{{ picture.name }}"/>
                                </li>
                            </ul>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <!-----------------------------------------------fin pics------------------------------------------------->
    </div>
</section>
{% include 'footer.html.twig' %}

