{% include "head.html.twig" %}
{% include 'header.html.twig' %}

<section id="menu" class="bodyMenu">
    <!-------------------------------------header-------------------------------------------------------------------->
    <div class="container-fluid menuBack" id="carte">
        <div class="row text-center">
            <h1 class="titleCard yellow">LA CARTE</h1>
        </div>
    </div>
    <div class="styleSpacer"></div>
    <!-------------------------------------fin header--------------------------------------->


    <!-------------------------------------onglets------------------------------------------------->
    <div id="exTab1" class="color container-fluid">
        <div class="row backTab">
            <ul class="nav nav-pills text-center">
                {% for consistency, menu in menus %}
                    <li {{ consistency }} class="{{ loop.first ? 'active' }}">
                        <a class="colorTab" href="#type{{ consistency }}"
                           data-toggle="tab">{{ consistency }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!--------------------------------------fin onglets--------------------------------------------->
    <div class="styleSpacer"></div>
    <!-----------------------------------------pills------------------------------------------------>
    <div class="container-fluid">
        <div class="tab-content clearfix">
            {% for consistency, menu in menus %}
                <div class="tab-pane {{ loop.first ? 'active' }}" id="type{{ consistency }}">
                    <div class="row backgroundCategory">
                        <div class="yellowTitle text-center">
                            {{ consistency }}
                        </div>
                    </div>
                    {% for categories, crepes in menu %}
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-lg-10 col-lg-offset-1 fond">
                                <h2 class="titleCategory">{{ categories }}</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-lg-9 col-lg-offset-1">
                                <div class="row">
                                    {% for crepe in crepes %}
                                        <div class="col-lg-6">
                                            <ul>
                                                <div class="row">
                                                    <div class="col-xs-8 col-xs-offset-1 col-lg-9">
                                                        <h4 class="category"> {{ crepe.title }}</h4>
                                                    </div>
                                                    <div class="col-xs-2 col-xs-offset-1 col-lg-1">
                                                        <h4 class="price pull-right"> {{ crepe.price|number_format(2,",",".") }}€</h4>
                                                    </div>
                                                </div>
                                                <div class="row rowHeight">
                                                    <div class="col-xs-12 col-lg-11 col-lg-offset-1"><span
                                                                class="description">{{ crepe.description }}</span>
                                                    </div>
                                                </div>
                                            </ul>
                                        </div>
                                    {% endfor %}
                                </div>
                                {% for extra in extras[consistency] %}
                                    <div class="row ">
                                        <div class="col-lg-6">
                                            <div class="col-xs-8 col-xs-offset-2 col-lg-9 col-lg-offset-1 description">
                                                <span class="glyphicon glyphicon-plus"></span> {{ extra.title }}
                                            </div>
                                            <div class="col-xs-2 col-lg-2 price pull-right"> {{ extra.price|number_format(2,",",".") }}€</div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <!--------------------------------------------fin pills---------------------------------------------------->

        <!-----------------------------------------------pics---------------------------------------------------------->
        <div class="container-fluid">
            <div class="row pics">
                <div class="col-xs-10 col-lg-10 col-lg-offset-1">
                    <div class="row ">
                        {% for picture in pictures %}
                            <div class="col-lg-3 col-md-3 col-sm-6 col-offset-xs-1 col-xs-11">
                                <img src="pictures/upload/{{ picture.name }}"
                                     class="pictureDetail img-responsive" alt="{{ picture.name }}"/>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <!-----------------------------------------------fin pics------------------------------------------------->
        <a href="#carte">
            <img src="pictures/backTop.png" class="pull-right img-responsive go-top" alt="Top"/>
        </a>
    </div>


</section>
{% include 'footer.html.twig' %}